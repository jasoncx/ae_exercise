{% extends 'base.html.twig' %}

{% block body %}
{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.username) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}
            </div>

            <button class="btn btn-primary" type="submit">Register</button>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}